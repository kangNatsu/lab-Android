<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnObjWrite"
            android:onClick="onClickObjectWrite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Json Object 쓰기"
            android:textColor="@color/colorPrimary"
            android:layout_margin="8dp"
            android:textSize="16dp"/>

        <Button
            android:id="@+id/btnObjRead"
            android:onClick="onClickObjectRead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Json Object  읽기"
            android:textSize="16dp"
            android:layout_margin="8dp"
            android:textColor="@color/colorAccent"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btnArrayWrite"
            android:onClick="onClickWriteArray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18dp"
            android:text="JSON ARRAY 쓰기"
            android:layout_margin="8dp"
            android:textColor="@color/colorPrimary"/>

        <Button
            android:id="@+id/btnArrayRead"
            android:onClick="onClickReadArray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="JSON ARRAY 읽기"
            android:textSize="18dp"
            android:layout_margin="8dp"
            android:textColor="@color/colorAccent"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


        <TextView
            android:id="@+id/textView"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_margin="8dp"
            android:textSize="18dp"/>
    </ScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


        <TextView
            android:id="@+id/textView2"
            android:textColor="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"

            android:layout_margin="8dp"
            android:textSize="18dp"/>
    </ScrollView>


</LinearLayout>